{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://captable.schema/v2",
  "title": "Cap Table Schema",
  "description": "Dynamic capitalization table with formula-driven calculations and round-based architecture",
  "type": "object",
  "required": [
    "schema_version",
    "company",
    "rounds"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "2.0"
    },
    "company": {
      "$ref": "#/$defs/Company"
    },
    "rounds": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Round"
      },
      "description": "Financing rounds containing nested instruments"
    }
  },
  "$defs": {
    "Name": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[^\\n\\r]+$",
      "description": "Unique name identifier"
    },
    "FormulaEncodingObject": {
      "type": "object",
      "required": [
        "is_calculated",
        "formula_string",
        "dependency_refs",
        "output_type"
      ],
      "properties": {
        "is_calculated": {
          "type": "boolean",
          "const": true,
          "description": "Flag indicating this field requires formula injection"
        },
        "formula_string": {
          "type": "string",
          "description": "Excel formula using symbolic placeholders (US English syntax)"
        },
        "dependency_refs": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["placeholder", "path"],
            "properties": {
              "placeholder": {
                "type": "string",
                "description": "Symbolic name used in formula_string"
              },
              "path": {
                "type": "string",
                "description": "JSON Pointer to data or UUID reference"
              },
              "reference_type": {
                "type": "string",
                "enum": [
                  "named_range",
                  "structured_reference",
                  "cell_reference",
                  "uuid_lookup"
                ],
                "description": "Type of Excel reference to generate"
              }
            }
          },
          "description": "List of symbolic references to resolve"
        },
        "output_type": {
          "type": "string",
          "enum": ["named_range", "structured_reference", "cell_reference"],
          "description": "Required Excel reference style for output"
        }
      }
    },
    "Company": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Company name"
        },
        "incorporation_date": {
          "type": "string",
          "format": "date",
          "description": "Date of incorporation (YYYY-MM-DD)"
        },
        "current_date": {
          "type": "string",
          "format": "date",
          "description": "Current date for calculations (YYYY-MM-DD)"
        },
        "current_pps": {
          "type": "number",
          "description": "Current price per share for TSM calculations"
        }
      }
    },
    "Instrument": {
      "type": "object",
      "required": [
        "holder_name",
        "class_name"
      ],
      "properties": {
        "holder_name": {
          "type": "string",
          "description": "Reference to holder by name"
        },
        "class_name": {
          "type": "string",
          "description": "Reference to security class by name"
        },
        "pro_rata_type": {
          "type": "string",
          "enum": ["none", "standard", "super"],
          "default": "none",
          "description": "Pro rata rights type: none (no rights), standard (maintain ownership), super (exceed ownership up to specified percentage)"
        },
        "pro_rata_percentage": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Target ownership percentage for super pro rata rights (required when pro_rata_type is 'super')"
        },
        "initial_quantity": {
          "oneOf": [
            {
              "type": "number",
              "minimum": 0
            },
            {
              "$ref": "#/$defs/FormulaEncodingObject"
            }
          ],
          "description": "Number of shares (for fixed_shares type) or calculated from other fields"
        },
        "target_percentage": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Target ownership percentage for target_percentage calculation type (as decimal, e.g., 0.20 for 20%)"
        },
        "investment_amount": {
          "type": "number",
          "minimum": 0,
          "description": "Investment amount (for valuation_based and convertible types)"
        },
        "interest_rate": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Annual interest rate on investment (as decimal, e.g., 0.08 for 8%)"
        },
        "interest_start_date": {
          "type": "string",
          "format": "date",
          "description": "Date when interest starts accruing (YYYY-MM-DD)"
        },
        "interest_end_date": {
          "type": "string",
          "format": "date",
          "description": "Date when interest ends accruing (YYYY-MM-DD)"
        },
        "days_passed": {
          "oneOf": [
            {
              "type": "number",
              "minimum": 0
            },
            {
              "$ref": "#/$defs/FormulaEncodingObject"
            }
          ],
          "description": "Days between interest_start_date and interest_end_date (can be calculated)"
        },
        "interest_type": {
          "type": "string",
          "enum": ["simple", "compound_yearly", "compound_monthly", "compound_daily", "no_interest"],
          "default": "simple",
          "description": "Type of interest calculation: simple (annual), compound yearly (annual compounding), compound monthly, compound daily, or no interest"
        },
        "accrued_interest": {
          "oneOf": [
            {
              "type": "number",
              "minimum": 0
            },
            {
              "$ref": "#/$defs/FormulaEncodingObject"
            }
          ],
          "description": "Accrued interest on investment (can be calculated if rate and dates provided)"
        },
        "discount_rate": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Discount rate for convertible instruments (e.g., 0.20 for 20%)"
        },
        "current_quantity": {
          "oneOf": [
            {
              "type": "number"
            },
            {
              "$ref": "#/$defs/FormulaEncodingObject"
            }
          ],
          "description": "Current shares (may be calculated for vesting)"
        },
        "strike_price": {
          "type": "number",
          "description": "Exercise price for options/warrants"
        },
        "acquisition_price": {
          "type": "number",
          "description": "Original issue price paid per share"
        },
        "acquisition_date": {
          "type": "string",
          "format": "date",
          "description": "Date of acquisition (YYYY-MM-DD)"
        },
        "vesting_terms": {
          "$ref": "#/$defs/VestingTerms",
          "description": "Vesting schedule for options"
        }
      }
    },
    "VestingTerms": {
      "type": "object",
      "required": ["grant_date", "cliff_days", "vesting_period_days"],
      "properties": {
        "grant_date": {
          "type": "string",
          "format": "date",
          "description": "Date when options were granted"
        },
        "cliff_days": {
          "type": "integer",
          "minimum": 0,
          "description": "Cliff period in days"
        },
        "vesting_period_days": {
          "type": "integer",
          "minimum": 0,
          "description": "Total vesting period in days"
        },
        "vested_quantity": {
          "$ref": "#/$defs/FormulaEncodingObject",
          "description": "Calculated vested shares (auto-generated)"
        }
      }
    },
    "Round": {
      "type": "object",
      "required": ["name", "round_date", "calculation_type"],
      "properties": {
        "name": {
          "$ref": "#/$defs/Name"
        },
        "round_date": {
          "type": "string",
          "format": "date",
          "description": "Round closing date (YYYY-MM-DD)"
        },
        "calculation_type": {
          "type": "string",
          "enum": ["fixed_shares", "target_percentage", "convertible", "valuation_based"],
          "description": "Calculation method for all instruments in this round"
        },
        "valuation_cap_basis": {
          "type": "string",
          "enum": ["pre_money", "post_money"],
          "description": "Valuation basis for convertible instruments (required for convertible type)"
        },
        "valuation_basis": {
          "type": "string",
          "enum": ["pre_money", "post_money"],
          "description": "Valuation basis for valuation_based calculation type - determines how shares are calculated from investment amount"
        },
        "instruments": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Instrument"
          },
          "description": "Instruments issued in this round"
        },
        "investment_amount": {
          "oneOf": [
            {
              "type": "number",
              "minimum": 0
            },
            {
              "$ref": "#/$defs/FormulaEncodingObject"
            }
          ],
          "description": "Total investment amount in this round (can be calculated from instruments)"
        },
        "pre_money_valuation": {
          "oneOf": [
            {
              "type": "number"
            },
            {
              "$ref": "#/$defs/FormulaEncodingObject"
            }
          ],
          "description": "Pre-money valuation (used for valuation_based and convertible calculations)"
        },
        "post_money_valuation": {
          "oneOf": [
            {
              "type": "number"
            },
            {
              "$ref": "#/$defs/FormulaEncodingObject"
            }
          ],
          "description": "Post-money valuation (can be calculated or used for calculations)"
        },
        "price_per_share": {
          "oneOf": [
            {
              "type": "number"
            },
            {
              "$ref": "#/$defs/FormulaEncodingObject"
            }
          ],
          "description": "Price per share in this round (can be calculated from valuation)"
        },
        "shares_issued": {
          "oneOf": [
            {
              "type": "number"
            },
            {
              "$ref": "#/$defs/FormulaEncodingObject"
            }
          ],
          "description": "Total shares issued in this round (can be calculated from instruments)"
        },
        "pre_round_shares": {
          "oneOf": [
            {
              "type": "number"
            },
            {
              "$ref": "#/$defs/FormulaEncodingObject"
            }
          ],
          "description": "Total shares outstanding before this round (auto-calculated from previous rounds)"
        },
        "option_pool_increase": {
          "type": "object",
          "properties": {
            "target_pool_percent": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Target option pool percentage (e.g., 0.20 for 20%)"
            },
            "shares_added": {
              "$ref": "#/$defs/FormulaEncodingObject",
              "description": "Shares added to option pool (will be auto-generated)"
            }
          }
        }
      }
    }
  }
}
